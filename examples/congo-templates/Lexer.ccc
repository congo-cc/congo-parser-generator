;

<EXPRESSION> TOKEN#Literal :
  <STRING_LITERAL :
      ("\""
          ((~["\\", "\""]) | ("\\" ~[]))*
      "\"")
      |
      ("'"
          ((~["\\", "'"]) | ("\\" ~[]))*
      "'")
  > #StringLiteral
  |
  <RAW_STRING : "r" (("\"" (~["\""])* "\"") | ("'" (~["'"])* "'"))> #StringLiteral
  |
  <FALSE : "false"> #BooleanLiteral
  |
  <TRUE : "true"> #BooleanLiteral
  |
  <NULL : "null"> #NullLiteral
  |
  <NUMBER : ("0" | (["1"-"9"]) (["0"-"9"])*) ("." (["0"-"9"])+)?> #NumberLiteral
;

